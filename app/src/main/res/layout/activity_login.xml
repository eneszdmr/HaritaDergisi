<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/statusbar"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_30sdp"
    tools:context=".Admin.LoginActivity">

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/hgmlogo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/rectangular_field"
            android:hint="Mail Adresi Giriniz"
            android:inputType="textEmailAddress"
            android:paddingVertical="@dimen/_15sdp"
            android:paddingLeft="@dimen/_50sdp"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/gmail" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55ssp"
            android:background="@drawable/rectangular_field"
            android:hint="Parola Giriniz"
            android:inputType="numberPassword"
            android:paddingVertical="@dimen/_15sdp"
            android:paddingLeft="@dimen/_50sdp"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/lock" />
    </RelativeLayout>
<Button
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:text="GiriÅŸ Yap"
    android:textColor="#ffffff"
    android:layout_marginTop="@dimen/_20sdp"
    android:textSize="@dimen/_13sdp"

    />

</LinearLayout>